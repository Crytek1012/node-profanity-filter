{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "declaration": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "isolatedModules": true,
      "allowArbitraryExtensions": true,
    },
    "include": ["src/**/*", "tests"],
    "exclude": ["node_modules", "dist", "tests", "**/*.test.ts", "**/*.spec.ts"]
  }
  